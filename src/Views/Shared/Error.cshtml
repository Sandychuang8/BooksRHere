@model int
@{
    var statusCode = Model;
    var statusmessage = string.Empty;
    switch (statusCode)
    {
        case 400:
            statusmessage = BooksRHere.Properties.Resources.BadRequestTheRequestCannotBeFulfilledDueToBadSyntax;
            break;
        case 403:
            statusmessage = BooksRHere.Properties.Resources.Forbidden;
            break;
        case 404:
            statusmessage = BooksRHere.Properties.Resources.PageNotFound;
            break;
        case 408:
            statusmessage = BooksRHere.Properties.Resources.TheServerTimedOutWaitingForTheRequest;
            break;
        case 500:
            statusmessage = BooksRHere.Properties.Resources.InternalServerErrorServerWasUnableToFinishProcessingTheRequest;
            break;
        default:
            statusmessage = BooksRHere.Properties.Resources.ThatsOddSomethingWeDidntExpectHappened;
            break;
    }

    ViewData[Constants.Title] = statusmessage;
}

<div class="container">
    <h1>@BooksRHere.Properties.Resources.Error @Model</h1>
    <p>@statusmessage</p>
</div>
